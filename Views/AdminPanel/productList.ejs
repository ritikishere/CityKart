<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Product List</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class'
    };
  </script>
</head>
<body class="transition duration-500 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 text-white dark:text-white min-h-screen p-5 relative">

  <!-- 🔙 Home Button -->
  <a href="/" class="absolute top-4 left-4 flex items-center gap-2 text-yellow-400 hover:text-yellow-300 transition duration-300 transform hover:scale-110">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 9v-6h4v6m5 0h2a2 2 0 002-2v-7a2 2 0 00-.586-1.414l-8-8a2 2 0 00-2.828 0l-8 8A2 2 0 003 12v7a2 2 0 002 2h2" />
    </svg>
    <span class="hidden sm:inline font-semibold">Home</span>
  </a>

  <!-- ➕ Add Product -->
  <a href="/addproduct" class="absolute top-4 right-16 bg-yellow-500 text-black px-4 py-2 rounded-xl font-semibold hover:bg-yellow-400 transition hover:scale-105">
    ➕ Add Product
  </a>

  <!-- 🌗 Toggle Theme Button -->
  <button id="themeToggle" class="absolute top-4 right-4 bg-gray-700 dark:bg-yellow-400 text-white dark:text-black p-2 rounded-full hover:scale-110 transition">
    <svg id="moonIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path d="M12 3c.132 0 .262.005.391.014a9 9 0 106.595 13.354A7 7 0 0112 3z" />
    </svg>
    <svg id="sunIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M12 3v1m0 16v1m8.66-13.66l-.71.71M4.05 19.95l-.71.71M21 12h-1M4 12H3m16.95 7.05l-.71-.71M4.34 4.34l-.71-.71M12 5a7 7 0 100 14 7 7 0 000-14z" />
    </svg>
  </button>

  <!-- Product List -->
  <div class="mt-20 space-y-4 max-w-4xl mx-auto">
    <% products.forEach(function(product) { %>
      <div class="flex items-center justify-between bg-gray-800 dark:bg-white text-white dark:text-black px-5 py-4 rounded-xl shadow-md transition duration-300 transform hover:scale-105 hover:shadow-[0_0_15px_2px_rgba(255,255,0,0.4)] dark:hover:shadow-[0_0_20px_3px_rgba(255,215,0,0.5)]">
        <div class="flex items-center gap-4">
          <img src="<%= product.image %>" alt="" class="w-12 h-12 rounded-xl object-cover border border-yellow-500">
          <div>
            <h1 class="text-lg font-semibold"><%= product.title %></h1>
            <p class="text-sm text-yellow-400 dark:text-yellow-600"><%= product.category %></p>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <!-- ✏️ Edit -->
          <button class="hover:text-yellow-400 transition transform hover:scale-110">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z" />
            </svg>
          </button>
          <!-- ❌ Delete -->
          <a class="hover:text-red-500 transition transform hover:scale-110" href="/delete/<%= product._id %>" >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M6 18L18 6M6 6l12 12" />
            </svg>
          </a>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Toggle Script -->
  <script>
    const toggle = document.getElementById('themeToggle');
    toggle.addEventListener('click', () => {
      document.documentElement.classList.toggle('dark');
    });
  </script>
</body>
</html>
