<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>product</title>
</head>
<body>

   

    <div class="flex flex-wrap justify-center items-center gap-11">
  <% products.forEach(function(product){ %>

        <div class="w-64 bg-white dark:bg-gray-800 flex flex-col justify-center items-cente rounded-2xl shadow-sm shadow-black p-1 relative   rounded-full hover:scale-110  active:scale-110 focus:scale-110 transition transform shadow-lg hover:shadow-blue-500/90 dark:hover:shadow-yellow-500/90  ">
  <!-- Heart Icon (Top-Right Corner) -->
  <button class="absolute top-5 right-5 text-white hover:text-red-600 text-xl z-10">
    ❤️
  </button>

  <!-- Product Image -->

  
    <div class="h-55 bg-gray-200 rounded-xl flex items-center overflow-hidden justify-center hover:scale-110 dark:hover:scale-110  active:scale-110 focus:scale-110 transition transform shadow-lg hover:shadow-blue-500/90 dark:hover:shadow-yellow-500/90 ">
    <img src="<%= product.image %>" alt="Product Image" class="h-full objectcontain " />
  </div>
  
  

  <!-- Cart Icon below image, right aligned -->
  <div class="flex justify-end relative right-2 top-2 mt-2">

    <form action="/add-to-cart/<%= product._id %>" method="POST">
      <button class="bg-yellow-800 hover:bg-yellow-700 text-white p-2 rounded-full text-sm transform transition-transform duration-200 hover:scale-110">
      <!-- SVG Cart Icon -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13l-1.6 8H18a1 1 0 100-2H8.4M7 13h0" />
      </svg>
    </button>
    </form>
    
  </div>

  <!-- Product Details -->
  <div class="mt-4 relative left-2 bottom-2 ">
    <h3 class="text-base font-semibold text-gray-800 dark:text-white text-xl"> <%= product.title %> </h3>

    <!-- Pricing -->
    <div class="flex items-center gap-1 mt-1">
      <span class="text-lg font-bold text-orange-700 dark:text-green-400 w-4 h-4  "> <svg version="1.1" fill="currentColor" id="_x32_" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 512 512" xml:space="preserve" ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier">  <g> <path  d="M318.213,66.588h107.818L465.37,0H85.969L46.63,66.588h145.727c32.137,9.476,58.259,28.504,72.702,52.656 H85.969l-39.34,66.588h227.316c-13.482,45.473-65.618,79.365-127.924,79.365H68.313v60.013L288.818,512h96.012v-23.222 L183.333,321.936c84.557-3.351,153.634-61.218,166.283-136.105h76.415l39.339-66.588H345.687 C340.062,100.028,330.637,82.256,318.213,66.588z"></path> </g> </g></svg> </span>
      <span class="text-lg font-bold dark:text-green-400 text-orange-700 flex  ">  <%= product.price %> </span>
      <span class="line-through text-sm text-gray-500"> <%= product.orgPrice %> </span>
    </div>

    <!-- Rating -->
    <div class="flex items-center mt-2">
  <% for(let i = 1; i <= 5; i++) { %>
    <% if(i <= product.rating) { %>
      <span class="dark:text-yellow-400 text-yellow-400 ">★</span>
    <% } else { %>
      <span class="text-white">★</span>
    <% } %>
  <% } %>
</div>

  </div>
</div>
    <% }) %>

    </div>
    
</body>
</html>