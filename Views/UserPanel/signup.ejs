<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sign Up</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class'
    };
  </script>
  <style>
    .glow:hover {
      box-shadow: 0 0 15px #34d399, 0 0 25px #34d399;
    }
  </style>
</head>
<body class="transition duration-500 bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 text-white min-h-screen flex items-center justify-center p-8 relative">

  <!-- üîô Back -->
  <a href="/" class="absolute top-5 left-5 flex items-center gap-2 text-green-400 hover:text-green-300 transition duration-300 transform hover:scale-110">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 9v-6h4v6m5 0h2a2 2 0 002-2v-7a2 2 0 00-.586-1.414l-8-8a2 2 0 00-2.828 0l-8 8A2 2 0 003 12v7a2 2 0 002 2h2" />
    </svg>
    <span class="hidden sm:inline font-semibold">Home</span>
  </a>

  <!-- üåó Theme Toggle -->
  <button id="themeToggle" class="absolute top-5 right-5 bg-gray-700 dark:bg-green-400 text-white dark:text-black p-2 rounded-full hover:scale-110 transition">
    <svg id="moonIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path d="M12 3c.132 0 .262.005.391.014a9 9 0 106.595 13.354A7 7 0 0112 3z" />
    </svg>
    <svg id="sunIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M12 3v1m0 16v1m8.66-13.66l-.71.71M4.05 19.95l-.71.71M21 12h-1M4 12H3m16.95 7.05l-.71-.71M4.34 4.34l-.71-.71M12 5a7 7 0 100 14 7 7 0 000-14z" />
    </svg>
  </button>

  <!-- üìù Sign Up Form - Landscape Layout -->
  <div class="bg-gray-800 dark:bg-white dark:text-black rounded-2xl shadow-2xl p-8 w-full max-w-6xl glow transition-all duration-500">
    <h2 class="text-3xl font-bold text-center mb-8 animate-pulse text-green-400 dark:text-green-600">üìù Sign Up</h2>

    <form action="/createuser" method="POST" enctype="multipart/form-data">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- First Name -->
        <div>
          <label class="block text-sm font-medium text-gray-300 dark:text-gray-700">First Name</label>
          <input type="text" name="firstName" required placeholder="Ritik"
            class="mt-1 w-full rounded-lg bg-gray-700 dark:bg-gray-100 text-white dark:text-black p-2 border border-gray-600 dark:border-gray-300" />
        </div>

        <!-- Last Name -->
        <div>
          <label class="block text-sm font-medium text-gray-300 dark:text-gray-700">Last Name</label>
          <input type="text" name="lastName" required placeholder="Kumar"
            class="mt-1 w-full rounded-lg bg-gray-700 dark:bg-gray-100 text-white dark:text-black p-2 border border-gray-600 dark:border-gray-300" />
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-300 dark:text-gray-700">Email</label>
          <input type="email" name="email" required placeholder="you@example.com"
            class="mt-1 w-full rounded-lg bg-gray-700 dark:bg-gray-100 text-white dark:text-black p-2 border border-gray-600 dark:border-gray-300" />
        </div>

        <!-- Contact -->
        <div>
          <label class="block text-sm font-medium text-gray-300 dark:text-gray-700">Contact</label>
          <input type="number" name="contact" required placeholder="9876543210"
            class="mt-1 w-full rounded-lg bg-gray-700 dark:bg-gray-100 text-white dark:text-black p-2 border border-gray-600 dark:border-gray-300" />
        </div>

        <!-- Image -->
        <div>
          <label class="block text-sm font-medium text-gray-300 dark:text-gray-700">Image</label>
          <input type="file" name="image" accept="image/*" placeholder="Upload profile photo" capture
            class="mt-1 w-full rounded-lg bg-gray-700 dark:bg-gray-100 text-white dark:text-black p-2 border border-gray-600 dark:border-gray-300" />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-medium text-gray-300 dark:text-gray-700">Password</label>
          <input type="password" name="password" required placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
            class="mt-1 w-full rounded-lg bg-gray-700 dark:bg-gray-100 text-white dark:text-black p-2 border border-gray-600 dark:border-gray-300" />
        </div>
      </div>

      <!-- Submit Button -->
      <div class="pt-6">
        <button type="submit"
          class="w-full bg-green-500 hover:bg-green-400 text-black font-semibold py-3 px-4 rounded-xl transition transform hover:scale-105 mt-4">
           Create Account
        </button>
      </div>
    </form>
  </div>

  <!-- Theme Toggle Script -->
  <script>
    document.getElementById('themeToggle').addEventListener('click', () => {
      document.documentElement.classList.toggle('dark');
    });
  </script>
</body>
</html>
