<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sign Up</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class'
    };
  </script>
  <style>
    .glow:hover {
      box-shadow: 0 0 15px #3b82f6, 0 0 25px #3b82f6;
    }
    .dark .glow:hover {
      box-shadow: 0 0 15px #facc15, 0 0 25px #facc15;
    }
    .background-image::before {
      content: '';
      position: absolute;
      inset: 0;
      background-image: url('https://images.unsplash.com/photo-1601597111158-2d22096b49aa?auto=format&fit=crop&w=1600&q=80');
      background-size: cover;
      background-position: center;
      filter: blur(8px) brightness(0.5);
      z-index: -1;
    }
  </style>
</head>
<body class="relative background-image transition duration-500 text-black dark:text-white min-h-screen flex items-center justify-center p-8">

  <div class="absolute inset-0 z-0">
    <img src="TrendingImages/background3.jpg" 
         alt="Background" 
         class="w-full h-full object-cover filter blur-sm brightness-75 dark:brightness-50 opacity-80" />
  </div>
  <!-- 🔙 Back -->
  <a href="/" class="absolute top-5 left-5 flex items-center gap-2 text-blue-500 dark:text-yellow-400 hover:scale-110 transition z-10">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 9v-6h4v6m5 0h2a2 2 0 002-2v-7a2 2 0 00-.586-1.414l-8-8a2 2 0 00-2.828 0l-8 8A2 2 0 003 12v7a2 2 0 002 2h2" />
    </svg>
    <span class="hidden sm:inline font-semibold">Home</span>
  </a>

  <!-- 🌗 Theme Toggle -->
  <button id="themeToggle" class="absolute top-5 right-5 bg-blue-500 dark:bg-yellow-400 text-white dark:text-black p-2 rounded-full hover:scale-110 transition z-10">
    <svg id="moonIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path d="M12 3c.132 0 .262.005.391.014a9 9 0 106.595 13.354A7 7 0 0112 3z" />
    </svg>
    <svg id="sunIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M12 3v1m0 16v1m8.66-13.66l-.71.71M4.05 19.95l-.71.71M21 12h-1M4 12H3m16.95 7.05l-.71-.71M4.34 4.34l-.71-.71M12 5a7 7 0 100 14 7 7 0 000-14z" />
    </svg>
  </button>

  <!-- 📝 Sign Up Form -->
  <div class="bg-white dark:bg-gray-800 text-black dark:text-white rounded-2xl shadow-2xl p-8 w-full max-w-6xl glow z-10 transition-all duration-500">
    <h2 class="text-3xl font-bold text-center mb-8 animate-pulse text-blue-500 dark:text-yellow-400"> Sign Up</h2>

    <form action="/createuser" method="POST" enctype="multipart/form-data">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- First Name -->
        <div>
          <label class="block text-sm font-medium text-blue-700 dark:text-yellow-300">First Name</label>
          <input type="text" name="firstName" required placeholder="Ritik"
            class="mt-1 w-full rounded-lg bg-blue-100 dark:bg-gray-700 text-black dark:text-white p-2 border border-blue-300 dark:border-yellow-400" />
        </div>

        <!-- Last Name -->
        <div>
          <label class="block text-sm font-medium text-blue-700 dark:text-yellow-300">Last Name</label>
          <input type="text" name="lastName" required placeholder="Kumar"
            class="mt-1 w-full rounded-lg bg-blue-100 dark:bg-gray-700 text-black dark:text-white p-2 border border-blue-300 dark:border-yellow-400" />
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-blue-700 dark:text-yellow-300">Email</label>
          <input type="email" name="email" required placeholder="you@example.com"
            class="mt-1 w-full rounded-lg bg-blue-100 dark:bg-gray-700 text-black dark:text-white p-2 border border-blue-300 dark:border-yellow-400" />
        </div>

        <!-- Contact -->
        <div>
          <label class="block text-sm font-medium text-blue-700 dark:text-yellow-300">Contact</label>
          <input type="number" name="contact" required placeholder="9876543210"
            class="mt-1 w-full rounded-lg bg-blue-100 dark:bg-gray-700 text-black dark:text-white p-2 border border-blue-300 dark:border-yellow-400" />
        </div>

        <!-- Image -->
        <div>
          <label class="block text-sm font-medium text-blue-700 dark:text-yellow-300">Image</label>
          <input type="file" name="image" accept="image/*"
            class="mt-1 w-full rounded-lg bg-blue-100 dark:bg-gray-700 text-black dark:text-white p-2 border border-blue-300 dark:border-yellow-400" />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-medium text-blue-700 dark:text-yellow-300">Password</label>
          <input type="password" name="password" required placeholder="••••••••"
            class="mt-1 w-full rounded-lg bg-blue-100 dark:bg-gray-700 text-black dark:text-white p-2 border border-blue-300 dark:border-yellow-400" />
        </div>
      </div>

      <!-- Submit Button -->
      <div class="pt-6">
        <button type="submit"
          class="w-full bg-blue-500 dark:bg-yellow-400 hover:bg-blue-400 dark:hover:bg-yellow-300 text-white dark:text-black font-semibold py-3 px-4 rounded-xl transition transform hover:scale-105 mt-4">
          Create Account
        </button>
      </div>
    </form>

    <!-- 🔁 Already Registered -->
    <div class="mt-6 text-center text-sm  text-blue-700 dark:text-yellow-300">
      Already have an account? 
      <a href="/login" class="text-blue-500 dark:text-yellow-400 font-semibold hover:underline hover:scale-105 inline-block transition"> Login here</a>
    </div>
  </div>

  <!-- 🌙 Theme Toggle Script -->
  <script>
    document.getElementById('themeToggle').addEventListener('click', () => {
      document.documentElement.classList.toggle('dark');
    });
  </script>
</body>
</html>
