<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class'
    };
  </script>
  <style>
    .glow-blue:hover {
      box-shadow: 0 0 15px #3b82f6, 0 0 25px #3b82f6;
    }
    .dark .glow:hover {
      box-shadow: 0 0 15px #facc15, 0 0 25px #facc15;
    }
  </style>
</head>
<body class="transition duration-500 bg-white dark:bg-gradient-to-r dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 text-gray-900 dark:text-white min-h-screen flex items-center justify-center p-8 relative">
  <div class="absolute inset-0 z-0">
    <img src="TrendingImages/background3.jpg" 
         alt="Background" 
         class="w-full h-full object-cover filter blur-sm brightness-75 dark:brightness-50 opacity-80" />
  </div>
   
  <!-- 🔙 Back -->
  <a href="/" class="absolute top-5 z-10 left-5 flex items-center gap-2 text-blue-500 dark:text-yellow-300 hover:scale-110 transition">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 9v-6h4v6m5 0h2a2 2 0 002-2v-7a2 2 0 00-.586-1.414l-8-8a2 2 0 00-2.828 0l-8 8A2 2 0 003 12v7a2 2 0 002 2h2" />
    </svg>
    <span class="hidden sm:inline z-10 font-semibold">Home</span>
  </a>

  <!-- 🌗 Theme Toggle -->
  <button id="themeToggle" class="absolute z-10 top-5 right-5 bg-gray-200 dark:bg-yellow-400 text-gray-800 dark:text-black p-2 rounded-full hover:scale-110 transition">
    <svg id="moonIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path d="M12 3c.132 0 .262.005.391.014a9 9 0 106.595 13.354A7 7 0 0112 3z" />
    </svg>
    <svg id="sunIcon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M12 3v1m0 16v1m8.66-13.66l-.71.71M4.05 19.95l-.71.71M21 12h-1M4 12H3m16.95 7.05l-.71-.71M4.34 4.34l-.71-.71M12 5a7 7 0 100 14 7 7 0 000-14z" />
    </svg>
  </button>

  <!-- 🔐 Login Form -->
  <div class="rounded-2xl p-8 w-full z-10 max-w-md transition-all duration-500
              bg-white text-gray-900 glow-blue dark:bg-gray-800 dark:text-white dark:glow-yellow shadow-2xl border border-gray-200 dark:border-gray-700">
    
    <h2 class="text-3xl font-bold text-center mb-8 animate-pulse text-blue-500 dark:text-yellow-300">Login</h2>

    <form action="/login" method="POST">
      <!-- Email -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
        <input type="email" name="email" required placeholder="you@example.com"
          class="mt-1 w-full rounded-lg bg-gray-100 dark:bg-gray-900 text-black dark:text-white p-2 border border-gray-300 dark:border-gray-600 focus:ring-2 focus:ring-blue-400 dark:focus:ring-yellow-400" />
      </div>

      <!-- Password -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
        <input type="password" name="password" required placeholder="••••••••"
          class="mt-1 w-full rounded-lg bg-gray-100 dark:bg-gray-900 text-black dark:text-white p-2 border border-gray-300 dark:border-gray-600 focus:ring-2 focus:ring-blue-400 dark:focus:ring-yellow-400" />
      </div>

      <!-- Submit Button -->
      <button type="submit"
        class="w-full bg-blue-500 dark:bg-yellow-400 hover:bg-blue-400 dark:hover:bg-yellow-300 text-white dark:text-black font-semibold py-3 px-4 rounded-xl transition transform hover:scale-105">
        Login
      </button>
    </form>
    <div class="mt-6 text-center text-sm text-gray-300 dark:text-gray-700">
      New User? 
      <a href="/signup" class="text-blue-400 dark:text-yellow-500 font-semibold hover:underline hover:scale-105 inline-block transition">Signup here</a>
    </div>
    
  </div>
  

  <!-- Theme Toggle Script -->
  <script>
    document.getElementById('themeToggle').addEventListener('click', () => {
      document.documentElement.classList.toggle('dark');
    });
  </script>

</body>
</html>
